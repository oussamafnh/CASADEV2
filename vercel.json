{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/public/index.html"
      }
    ],
    "env": {
      "JWT_SECRET": "@jwt_secret",
      "DB_URI": "@db_uri"
    }
  }
  